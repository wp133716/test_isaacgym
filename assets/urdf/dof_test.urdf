<?xml version="1.0"?>
<robot name="uavcamera">

    <link name="uav">
    <visual>
      <geometry>
        <box size="2 1 0.1"/>
      </geometry>
      <material name="uav_mat">
        <color rgba="0.9 0.6 0.2 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="2 1 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="camera_link1">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.1"/>
      </geometry>
      <material name="camera_mat">
        <color rgba="0.3 0.5 0.7 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
          <box size="0.3 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
    </inertial>
  </link>

  <link name="camera_link2">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.2"/>
      </geometry>
      <material name="camera_mat">
        <color rgba="0.4 0.5 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
          <box size="0.3 0.2 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
    </inertial>
  </link>

  <!-- <link name="camera_link3">
    <visual>
      <geometry>
        <box size="0.3 0.2 0.4"/>
      </geometry>
      <material name="camera_mat">
        <color rgba="0.3 0.5 0.7 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
          <box size="0.3 0.2 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
    </inertial>
  </link> -->

  <joint name="uav_to_camera_link1" type="continuous">
    <axis xyz="0 0 1"/>
    <origin xyz="1 0 -0.1"/>
    <parent link="uav"/>
    <child link="camera_link1"/>
    <dynamics damping="10.0"/>
    <limit effort="1000.0" velocity="8"/>
  </joint>
  <joint name="link1_to_camera_link2" type="continuous"> <revolute/>
    <axis xyz="0 1 0" />
    <!-- <axis xyz="0 0 1"/> -->
    <origin xyz="0.1 0.1 -0.1" rpy="0 0 0"/>
    <parent link="camera_link1"/>
    <child link="camera_link2"/>
    <dynamics damping="10.0"/>
    <limit effort="1000.0" velocity="8"/>
  </joint>
  
</robot>
